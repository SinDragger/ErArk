;-------------------------------------------------
;指示されたとおり之手套之标志を設定するために使う
;-------------------------------------------------
@SETFLAG_GLOVE(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "手首まで"
		SETBIT LOCAL, 0
	CASE "肘まで"
		SETBIT LOCAL, 1
	CASE "长"
		SETBIT LOCAL, 2
	CASE "荷叶边"
		SETBIT LOCAL, 3
	CASE "肉球"
		SETBIT LOCAL, 4
	CASE "爪"
		SETBIT LOCAL, 5
	CASE "和风"
		SETBIT LOCAL, 6
	CASE "手甲"
		SETBIT LOCAL, 6
		LOCAL |= SETFLAG_COMMON("铠甲")
	CASE "巨大"
		SETBIT LOCAL, 7
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARG之手套が条件ARGSを满たすか确认する
;-------------------------------------------------
@CHECK_GLOVE(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:手套 == 0
	RETURNF 0
SIF (SETFLAG_GLOVE(ARGS)&EQUIP:ARG:手套) == SETFLAG_GLOVE(ARGS)
	RETURNF 1
RETURNF 0

