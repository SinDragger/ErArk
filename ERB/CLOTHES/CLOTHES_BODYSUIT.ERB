;-------------------------------------------------
;指示されたとおり之紧身衣之标志を設定するために使う
;-------------------------------------------------
@SETFLAG_BODYS(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "紧身衣"
		SETBIT LOCAL, 0
	CASE "高叉"
		SETBIT LOCAL, 1
	CASE "丁字裤", "Tフロント"
		SETBIT LOCAL, 2
	CASE "Ｖ后入", "V后入"
		SETBIT LOCAL, 3
	CASE "丁字裤", "T后入"
		SETBIT LOCAL, 4
	CASE "体操紧身服"
		SETBIT LOCAL, 5
	CASE "学校泳装"
		SETBIT LOCAL, 6
		LOCAL |= SETFLAG_COMMON("泳装")
	CASE "兔女郎装"
		SETBIT LOCAL, 7
		LOCAL |= SETFLAG_COMMON("谷间露出")
	CASE "紧缚衣"
		SETBIT LOCAL, 8
	CASE "连身泳装"
		SETBIT LOCAL, 9
		LOCAL |= SETFLAG_COMMON("泳装")
	CASE "竞技泳装"
		SETBIT LOCAL, 10
		LOCAL |= SETFLAG_COMMON("泳装")
	CASE "糟糕体操紧身服"
		SETBIT LOCAL, 5
		SETBIT LOCAL, 11
	CASE "兔女郎"
		IF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("白")
		ELSEIF RAND:2
			LOCAL |= SETFLAG_COMMON("真紅")
		ELSE
			LOCAL |= SETFLAG_COMMON("黒")
		ENDIF
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARG之紧身衣が条件ARGSを满たすか确认する
;-------------------------------------------------
@CHECK_BODYS(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:紧身衣 == 0
	RETURNF 0
SELECTCASE ARGS
CASE "可裸露"
	SIF SETFLAG_BODYS("はだけた")&EQUIP:ARG:紧身衣
		RETURNF 0
	SIF SETFLAG_BODYS("はだけ不可")&EQUIP:ARG:紧身衣
		RETURNF 0
	RETURNF 1
;ずれ不可でなく、ずらしていない
CASE "ずらし可", "能撥开"
	SIF SETFLAG_BODYS("Ｖ露出")&EQUIP:ARG:紧身衣
		RETURNF 0
	IF SETFLAG_BODYS("拉链")&EQUIP:ARG:紧身衣
		SIF SETFLAG_BODYS("拉链开")&EQUIP:ARG:紧身衣
			RETURNF 0
		SIF CHECK_BODYS("拉链閉")
			RETURNF 1
	ENDIF
	SIF SETFLAG_BODYS("ずらした")&EQUIP:ARG:紧身衣
		RETURNF 0
	SIF SETFLAG_BODYS("ずれ不可")&EQUIP:ARG:紧身衣
		RETURNF 0
	RETURNF 1
;拉链があり、あけていない
CASE "拉链閉"
	SIF SETFLAG_BODYS("拉链开")&EQUIP:ARG:紧身衣
		RETURNF 0
	SIF SETFLAG_BODYS("拉链")&EQUIP:ARG:紧身衣
		RETURNF 1
CASE "露Ｖ胖次"
	SIF SETFLAG_BODYS("拉链开", "ずらした", "可撕", "Ｖ露出", "缝隙")&EQUIP:ARG:紧身衣
		RETURNF 0
	RETURNF 1
CASE "露Ａ胖次"
	SIF SETFLAG_BODYS("拉链开", "ずらした", "可撕", "Ａ露出", "缝隙")&EQUIP:ARG:紧身衣
		RETURNF 0
	RETURNF 1
CASE "紧勒"
	SIF SETFLAG_BODYS("ずらした", "拉链开", "Ｖ露出", "缝隙", "可撕")&EQUIP:ARG:紧身衣
		RETURNF 0
	SIF SETFLAG_BODYS("高叉", "丁字裤")&EQUIP:ARG:紧身衣
		RETURNF 1
CASE "潮湿"
	SIF SETFLAG_BODYS("ずらした", "拉链开", "Ｖ露出", "缝隙", "可撕")&EQUIP:ARG:紧身衣
		RETURNF 0
	SIF CHECK_STAIN(STAIN:ARG:连身衣（下）, "潮湿")
		RETURNF 1
CASE "润湿"
	SIF SETFLAG_BODYS("ずらした", "拉链开", "Ｖ露出", "缝隙", "可撕", "通气性无")&EQUIP:ARG:紧身衣
		RETURNF 0
	SIF CHECK_STAIN(STAIN:ARG:连身衣（下）, "濡れ")
		RETURNF 1
CASEELSE
	SIF (SETFLAG_BODYS(ARGS)&EQUIP:ARG:紧身衣) == SETFLAG_BODYS(ARGS)
		RETURNF 1
ENDSELECT

RETURNF 0
