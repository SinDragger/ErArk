;-------------------------------------------------
;紧身衣を着せる関数
;指定番号によって名前がCSTR:44に代入される。
;99番までは、そ之番号之梦魇之内衣。
;EQUIP:紧身衣は紧身衣之特征标志。ビット管理する
;-------------------------------------------------
@SET_BODYS, ARG, ARG:1
;ARG之紧身衣をARG:1番之も之にする。ARG:1==0なら紧身衣を脱がす
;汚れ＆ずれたりした标志等を初期化して新品にする
STAIN:ARG:连身衣（下） = 0
STAIN:ARG:连身衣（上） = 0
TCVAR:ARG:26 = 0

IF ARG:1 == 0 || COND("脚之使用", ARG) == 0
	EQUIP:ARG:紧身衣 = 0
	CSTR:ARG:44 = 
	RETURN 0
ENDIF

;名前記录
CSTR:ARG:44 = %PALAM_BODYS(ARG:1, ARG, 1)%

;SIF EQUIP:ARG:上着
;	CALL SET_SHIRT, ARG
SIF EQUIP:ARG:外套
	CALL SET_OUTER, ARG
;SIF EQUIP:ARG:外套 && !CHECK_OUTER("连裤袜", ARG)
;	CALL SET_OUTER, ARG
SIF EQUIP:ARG:ブラ
	CALL SET_BRA, ARG
IF EQUIP:ARG:紧身衣 && EQUIP:ARG:胖次
	SIF CHECK_BODYS("紧勒", ARG) && !CHECK_PANTIES("紧勒", ARG) && !CHECK_PANTIES("丁字裤", ARG) && !CHECK_PANTIES("Ｖ后入", ARG)
		CALL SET_PANTIES, ARG
	SIF CHECK_BODYS("泳装", ARG) || CHECK_BODYS("拉链", ARG) || CHECK_BODYS("Ｖ露出", ARG) || CHECK_BODYS("Ａ露出", ARG)
		CALL SET_PANTIES, ARG
ENDIF


TCVAR:ARG:26 = 0
RETURN ARG:1
;-------------------------------------------------
;ARG之穿いている紧身衣之名前。ARG:1==0なら正式名称 by CSTR。ARG:1==2なら色要素なし
;ARG:1==1なら短缩名称 by EQUIP。
;-------------------------------------------------
@BODYS(ARG, ARG:1)
#FUNCTIONS
SELECTCASE ARG:1
CASE 0
	LOCALS = %CSTR:ARG:44%
	SIF CONFIG("衣装之细かい色表示之禁止")
		RETURNF LOCALS
	LOCALS:1 = %TEXTS("衣装之色", EQUIP:ARG:紧身衣)%
	SIF LOCALS:1 != "" && (SUBSTRING(CSTR:ARG:44, 0, 2) != SUBSTRING(LOCALS:1, 0, 2) )
		LOCALS = %LOCALS%(%LOCALS:1%)
CASE 1
	IF CHECK_BODYS("竞技泳装", ARG)
		LOCALS = 竞技泳装
	ELSEIF CHECK_BODYS("连身泳装", ARG)
		IF CHECK_BODYS("紧勒", ARG)
			LOCALS = 高叉泳装
		ELSE
			LOCALS = 连衣裙
		ENDIF
	ELSEIF CHECK_BODYS("紧缚衣", ARG)
		LOCALS = 紧缚衣
	ELSEIF CHECK_BODYS("兔女郎装", ARG)
		LOCALS = 兔女郎装
	ELSEIF CHECK_BODYS("学校泳装", ARG)
		LOCALS = 学校泳装
	ELSEIF CHECK_BODYS("体操紧身服", ARG)
		LOCALS = 体操紧身服
	ELSE
		LOCALS = 紧身衣
	ENDIF
CASE 2
	LOCALS = %CSTR:ARG:44%
ENDSELECT
RETURNF LOCALS

