;-------------------------------------------------
;指示されたとおり之靴下之标志を設定するために使う
;-------------------------------------------------
@SETFLAG_SOCKS(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "足首まで"
		SETBIT LOCAL, 0
	CASE "小腿袜"
		SETBIT LOCAL, 1
	CASE "及膝袜", "及膝袜"
		SETBIT LOCAL, 2
	CASE "过膝袜"
		SETBIT LOCAL, 3
	CASE "绑腿"
		SETBIT LOCAL, 4
		LOCAL |= SETFLAG_COMMON("足露出")
	CASE "暖腿袜"
		SETBIT LOCAL, 5
		LOCAL |= SETFLAG_COMMON("足露出")
	CASE "和风"
		SETBIT LOCAL, 6
	CASE "足袋"
		SETBIT LOCAL, 6
		SETBIT LOCAL, 0
	CASE "脚絆"
		SETBIT LOCAL, 6
		SETBIT LOCAL, 4
	CASE "丝袜"
		SETBIT LOCAL, 7
	CASE "袜圈"
		SETBIT LOCAL, 8
	CASE "丝袜カラー"
		IF RAND:2
			LOCAL |= SETFLAG_COMMON("白")
		ELSE
			LOCAL |= SETFLAG_COMMON("黒")
		ENDIF
	CASE "袜圈カラー"
		IF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("纯白")
		ELSE
			LOCAL |= SETFLAG_COMMON("Ｈめ之色")
		ENDIF
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARG之靴下が条件ARGSを满たすか确认する
;-------------------------------------------------
@CHECK_SOCKS(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:靴下 == 0
	RETURNF 0
SIF (SETFLAG_SOCKS(ARGS)&EQUIP:ARG:靴下) == SETFLAG_SOCKS(ARGS)
	RETURNF 1
RETURNF 0

