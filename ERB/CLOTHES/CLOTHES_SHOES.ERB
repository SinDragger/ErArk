;-------------------------------------------------
;指示されたとおり之靴之标志を設定するために使う
;-------------------------------------------------
@SETFLAG_SHOES(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "足首まで"
		SETBIT LOCAL, 0
	CASE "长"
		SETBIT LOCAL, 1
	CASE "靴子"
		SETBIT LOCAL, 2
	CASE "短靴子"
		SETBIT LOCAL, 2
		SETBIT LOCAL, 0
	CASE "长筒皮靴"
		SETBIT LOCAL, 2
		SETBIT LOCAL, 1
	CASE "便鞋"
		SETBIT LOCAL, 3
		SETBIT LOCAL, 0
		LOCAL |= SETFLAG_COMMON("指露出")
	CASE "乐福鞋"
		SETBIT LOCAL, 4
		SETBIT LOCAL, 0
	CASE "小皮靴"
		SETBIT LOCAL, 5
		SETBIT LOCAL, 0
	CASE "足袋"
		SETBIT LOCAL, 6
		SETBIT LOCAL, 0
	CASE "舞鞋"
		SETBIT LOCAL, 7
		SETBIT LOCAL, 0
	CASE "高跟鞋"
		SETBIT LOCAL, 8
		SETBIT LOCAL, 0
	CASE "草鞋"
		SETBIT LOCAL, 9
		SETBIT LOCAL, 0
		LOCAL |= SETFLAG_COMMON("指露出")
	CASE "凉鞋"
		SETBIT LOCAL, 10
		SETBIT LOCAL, 0
	CASE "运动鞋"
		SETBIT LOCAL, 11
		SETBIT LOCAL, 0
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARG之靴が条件ARGSを满たすか确认する
;-------------------------------------------------
@CHECK_SHOES(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:靴 == 0
	RETURNF 0
SIF (SETFLAG_SHOES(ARGS)&EQUIP:ARG:靴) == SETFLAG_SHOES(ARGS)
	RETURNF 1
RETURNF 0
