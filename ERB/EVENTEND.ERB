#DIM NEWMONTH
#DIM NEWYEAR
#DIM NEWDAY
;是否是新一天/一月/一年
NEWDAY = 0
NEWMONTH = 0
NEWYEAR = 0

TIME += 1
SIF TIME == 8
	TIME = 0
IF TIME == 6
	DAY += 1
	NEWDAY = 1
	DAY:2 += 1
	IF DAY:2 > 28 && DAY:1 == 2
		DAY:1 += 1
		DAY:2 = 1
		NEWMONTH = 1
	ELSEIF DAY:2 > 30 && ( DAY:1 == 4 || DAY:1 == 6 || DAY:1 == 9 || DAY:1 == 11 )
		DAY:1 += 1
		DAY:2 = 1
		NEWMONTH = 1
	ELSEIF DAY:2 > 31 && ( DAY:1 == 1 || DAY:1 == 3 || DAY:1 == 5 || DAY:1 == 7 || DAY:1 == 8 || DAY:1 == 10 )
		DAY:1 += 1
		DAY:2 = 1
		NEWMONTH = 1
	ELSEIF DAY:2 > 31 && DAY:1 == 12
		DAY:1 = 1
		DAY:2 = 1
		NEWMONTH = 1
		NEWYEAR = 0
	ENDIF	
ENDIF