	CALL EVENT_RANKOU_SET, "复数主动夜袭"
	;乱交PLAYが实行可能ならば決定
	SIF CSTR:主动夜袭 != ""
		RETURN 1
ENDIF


;以下は通常之一人で之主动夜袭
NUM_FIND = 0

FOR LCOUNT, 0, 10
	SELECTCASE LCOUNT
	CASE 0
		SIF PENIS(PLAYER) == 0 || TALENT:处女 || TALENT:PLAYER:童贞 || CANTRAIN("逆推骑乘位") == 0
			CONTINUE
		LOCALS = 主动夜袭骑乘位
	CASE 1
		SIF PENIS(PLAYER) == 0 || EXP:PLAYER:A插入经验 == 0 || CANTRAIN("逆推肛交骑乘位") == 0
			CONTINUE
		LOCALS = 主动夜袭A骑乘位

	;欲求不满or大被同眠发生时には、ここより上之過激なPLAYを优先する
	CASE 2
		SIF NUM_FIND && COND("欲求不满") + COND("大被同眠")
			BREAK

		SIF (COND("欲求不满") || TALENT:外表年龄) && COND("大被同眠") == 0
			CONTINUE
		LOCALS = 旁边陪着睡
	CASE 3
		SIF TALENT:恋慕 == 0 || CANTRAIN("接吻") == 0
			CONTINUE
		LOCALS = 主动夜袭接吻
	CASEELSE
		BREAK
	ENDSELECT

	NUM_FIND += 1

	SIF RAND:NUM_FIND
		CONTINUE

	CSTR:主动夜袭 = %LOCALS%
NEXT

