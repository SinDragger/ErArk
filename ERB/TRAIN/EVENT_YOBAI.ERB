SELECTCASE CSTR:主动夜袭
CASE "主动夜袭A骑乘位", "主动夜袭骑乘位", "旁边陪着睡"
	TARGET:1 = FIND_COND("主动夜袭可能", "淫乱", "相思相爱")
	SIF TARGET:1 == 0  || COND("大被同眠")  || CFLAG:MASTER:96 == 0
		RETURN 0

	;实行可能指令之确认
	CALL CHECK_COM_ABLE, TARGET:1
