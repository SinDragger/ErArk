	CVARSET TEQUIP, 30, 0

CASE "旁边陪着睡"
	LOCAL = 1
	;PRINTL ＜旁边陪着睡？＞
	IF COND("大被同眠")
		PRINTFORMW %CALLNAME:MASTER%躺在床上、穿着睡衣的%CALLNAME:TARGET%若无其事的躺到床上、
