	LOCAL:1 = (ABL:奉仕精神 - ABL:欲望 - TEQUIP:媚药/100)*2
CASE IS < 0
	LOCAL:2 = (TEQUIP:媚药/100 + ABL:欲望 - ABL:奉仕精神)*2
ENDSELECT

