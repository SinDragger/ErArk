	ENDIF
	ABL:接吻 *= 2
	ABL:肛虐 /= 5
	ABL:强暴 /= 5
	ABL:素股 /= 4
	ABL:道具 = 0
;插入之后は插入or插入れたままできること
ELSEIF INSERT("插入") && ABL:骑乘位 + ABL:接吻 && RAND:4
	ABL:手 = 0
	ABL:口 = 0
	SIF I:2 != 104
		ABL:胸 = 0
	ABL:足 = 0
	ABL:顔面骑乘 = 0
	ABL:肛虐 = 0
	ABL:强暴 = 0
	ABL:素股 = 0
	ABL:道具 = 0
;强暴之后は连续强暴or使った穴にお礼
ELSEIF (PREVCOM == 120 || PREVCOM == 126) && ABL:强暴 && RAND:3
	ABL:手 = 0
	SIF TALENT:恋慕 == 0 && ABL:奉仕精神 < ABL:Ｓ属性
		ABL:口 = 0
	ABL:胸 = 0
	ABL:足 = 0
	ABL:顔面骑乘 = 0
	ABL:骑乘位 = 0
	ABL:接吻 = 0
	SIF PREVCOM != 84 && ABL:奉仕精神 < ABL:Ｓ属性
		ABL:肛虐 = 0
	ABL:素股 = 0
	ABL:道具 = 0
;阴茎に奉仕した后は奉仕or插入率が高い
ELSEIF PENIS(PLAYER) && PREVCOM >= 90 && PREVCOM <= 119 && ABL:手 + ABL:口 + ABL:胸 + ABL:肛虐 + ABL:素股 && RAND:4
	ABL:足 = 0

	ABL:骑乘位 *= 2
	ABL:接吻 = 0
	ABL:强暴 = 0
	ABL:道具 = 0
;润滑が少ない时には、顔面骑乘や口交率が高く、插入率が低い
ELSEIF MAX(PALAM:Ｖ润, PALAM:Ａ润, PALAM:PLAYER:Ｐ润) < 500 && ABL:顔面骑乘
	SIF I:1 == 91
		ABL:口 *= 2
	ABL:顔面骑乘 *= 2
	ABL:骑乘位 /= 5
	ABL:素股 /= 5
ENDIF

