;	BASE:MASTER:精力 = MAXBASE:MASTER:精力
;	BASE:MASTER:斯道克 = MAXBASE:MASTER:斯道克
;ENDIF

;精力之回復处理
FOR LCOUNT, 1, CHARANUM
	SIF BASE:LCOUNT:精力 == 0 || BASE:LCOUNT:精力 > MAXBASE:LCOUNT:精力 || CONFIG("ＥＡＳＹ")
		BASE:LCOUNT:精力 = MAXBASE:LCOUNT:精力
NEXT


@SET_COUNTER_ABL
#DIM LCOUNT
;类别ごとに何をやるかとそ之确率を決定
CALL CALC_COUNTER_ABL, TARGET

;同じ指令を连续で行う确率は低くする
FOR LCOUNT, 0, 11
	SIF ABL:(LCOUNT + 40) && I:LCOUNT == PREVCOM
		ABL:(LCOUNT + 40) = MAX(ABL:(LCOUNT + 40)/2, 1)
NEXT
;-------------------------------------------------
;插入している时之口交など、不可能な行动はここで处理
;-------------------------------------------------
;插入でイかされた后は、ご奉仕か接吻率が高い
IF ( (INSERT("Ｖ插入") || PREVCOM == 65 || PREVCOM == 66 || PREVCOM == 67) && PREVEX("Ｖ绝顶") ) || ( (INSERT("Ａ插入") || PREVCOM == 75) && PREVEX("Ａ绝顶") ) || ( (INSERT("尿道插入") || PREVCOM == 83) && PREVEX("尿道绝顶") )
	ABL:手 /= 4
	ABL:口 *= 4
	SIF I:2 != 104
		ABL:胸 /= 4
	ABL:足 /= 4
	;Ｓ属性あるなら打扫强要
	IF ABL:欲望 + ABL:Ｓ属性 + TALENT:抖Ｓ >= ABL:奉仕精神 * 2 && RAND:2 == 0
		ABL:顔面骑乘 *= 3
