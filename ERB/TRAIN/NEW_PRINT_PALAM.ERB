	PRINTFORM %PALAM_NUM(PALAM:LOCAL)%

	SIF ( (LCOUNT + 1) % ROW_SIZE) == 0
		PRINTL 
NEXT
SIF (LCOUNT + 1) % ROW_SIZE
	PRINTL 

@PALAM_NUM(ARG)
#FUNCTIONS
;999999を超えたらkMGTP
;Emueraではペタ程度（64ビット）まで扱えると之こと
VARSET LOCALS
FOR LOCAL, 0, 5
	SIF ARG < 100000
		BREAK
	SELECTCASE LOCAL
	CASE 0
		LOCALS = k
	CASE 1
		LOCALS = M
	CASE 2
		LOCALS = G
	CASE 3
		LOCALS = T
	CASE 4
		LOCALS = P
	ENDSELECT
	ARG /= 1000
NEXT
;数值之桁数に应じて间隔を调整
IF STRLENS(LOCALS)
	LOCALS = {ARG,5}%LOCALS%%BL(1)%
ELSE
	LOCALS = {ARG,6}%BL(1)%
ENDIF

RETURNF LOCALS

