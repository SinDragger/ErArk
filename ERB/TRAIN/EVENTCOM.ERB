;			PRINTFORMW 「アタシに口でして欲しいですって？　ふんっ、あんたなんか足で十分でしょ」
;		ENDIF
;	ENDIF
ENDIF

;PLAYERが交代しているならば参加していない人之插入など解除
IF SELECTCOM:2 == -1
	CALL RESET_INSERT, PLAYER:1
	;调教者之も之を咥えている之で无いなら解除
	SIF TEQUIP:深喉口交 != PLAYER
		TEQUIP:深喉口交 = 0
ENDIF

;接吻継续…ここでは标志OFF之み
;标志ONはCHECK_EX_EQUIPで行う
SELECTCASE SELECTCOM
;接吻、刺激插入部位などは值を变更させない。道具と秘法も变更しないことに
CASE 6, 65 TO 68, 230 TO 279, 282, 301, 311
;同じ调教者で连续選択时之み接吻継续
CASE 0, 2, 5, 7, 8, 10, 15, 16, 60, 62 TO 68, 70, 72 TO 75, 83, 90, 93, 94, 97, 105, 120 TO 129, 130, 176 TO 177, 280, 281, 300, 301, 311
	;调教者が变わるとダメ
	SIF COND("前Ｔ调教者") != PLAYER
		TEQUIP:接吻 = 0

	;前之回合之指令次第でダメ
	SELECTCASE PREVCOM
	;接吻ならOK
	CASE 6
	;连续实行ならOK
	CASE SELECTCOM
	CASEELSE
		;插入中はモード継续してみる
		IF INSERT("插入") || PREVPLAY("插入")
		ELSE
			TEQUIP:接吻 = 0
		ENDIF
	ENDSELECT
CASEELSE
	TEQUIP:接吻 = 0
ENDSELECT

;占有不可な场合
IF TEQUIP:Ｗ逆推 || COND("３Ｐ")
	TEQUIP:接吻 = 0
	TEQUIP:ASSI:接吻 = 0
ENDIF

;自慰之标志消滅判定
;特定指令之次之回合、ないし特定之状況化じゃないとダメということにしておく
SELECTCASE SELECTCOM
;舐阴, 自慰, 调教者口交, 接吻, 舐肛, 展示阴道, 展示肛门, 舐肛奉侍, 两乳夹头
CASE 1, 3, 4, 6, 9, 13, 14, 96, 104, 282

CASEELSE
	IF TEQUIP:顔面骑乘
	ELSE
		TEQUIP:PLAYER:自慰 = 0
	ENDIF
ENDSELECT

;胸爱抚之标志消滅判定
SIF SELECTCOM != 5
	TEQUIP:胸爱抚 = 0
;足交之标志消滅判定
SIF SELECTCOM != 95
	TEQUIP:足交 = 0

;给我变成玩具啦判定
CALL CALC, "给我变成玩具啦"

;调教指令实行前之参数之記录
CALL SAVE_PALAM_BEFORECOM

;-------------------------------------------------
;嗜虐or奉仕快乐経験发生标志
;-------------------------------------------------
CALL SETFLAG, "奉仕嗜虐判定", SELECTCOM


@EVENTCOMEND
#LATER

;-------------------------------------------------
;薫香等之效果終了之お知らせなど、回合之最后に出力する文本
;-------------------------------------------------
IF TEQUIP:甜言蜜语 >= 9
	TEQUIP:甜言蜜语 = 0
	PRINTL 
	PRINTL 高めたＨ氛围が元に戻っていく…
ENDIF
IF TEQUIP:爱抚
	TEQUIP:爱抚 += 1
	IF TEQUIP:爱抚 >= 3
		TEQUIP:爱抚 = 0
		PRINTL 
		PRINTL 敏感になった肌が元に戻っていく…
	ENDIF
ENDIF
IF TEQUIP:称賛 == 1
	TEQUIP:称賛 = 0
	PRINTL 
	PRINTL 褒めて高めた机嫌が元に戻っていく…
ENDIF
IF STATE("脱力", TARGET) && RAND:4 == 0
	PRINTL 
	PRINTFORML %CALLNAME:TARGET%は脱力状态から立ち直った！
	CALL REMOVE_STATE, TARGET, "脱力"
ENDIF
