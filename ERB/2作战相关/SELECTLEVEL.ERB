@SELECTLEVEL
#DIM CHAPNUM=1
$INPUTLOOP
CLEARLINE 100
PRINTL □ 选择关卡 □---------------------------------------------------------
CALLFORM CHAP{CHAPNUM}
SIF CHAPNUM>1
    PRINT [400]上一章
SIF CHAPNUM<2
    PRINT [500]下一章
PRINTL [999]返回

INPUT
SELECTCASE RESULT
    CASE 400
        CHAPNUM--
        GOTO INPUTLOOP
    CASE 500
        CHAPNUM++
        GOTO INPUTLOOP
    CASE 999
        RETURN
ENDSELECT
SIF LEVEL_LIST:RESULT!= "EMPTY"
    CALLFORM %LEVEL_LIST:RESULT%


